.common-box.padding-15
  .row
    .col-9
      = form_for [@transaction, @shipping_address], html: {class: "mobile-shipping-address"} do |form|
        .header-title
          %h2= t('transactions.contact_form.title')
        .row
          .col-12
            = form.text_field :email, placeholder: t('transactions.contact_form.email'), class: "shipping-address-email transaction-address-req-field"
            = fa_icon "check", class: "d-none"
          .col-12
            .shipping-noti.margin-bt-0.brown-font-color
              = check_box_tag :notification, nil, true
              %span= t('transactions.contact_form.noti')
        .header-title
          %h2= t('transactions.label.shipping_address')
        .form-group
          .row
            .col-6
              = form.text_field :first_name, placeholder: t('transactions.contact_form.first_name'), class: "shipping-address-first-name transaction-address-req-field"
              = fa_icon "check", class: "d-none"
            .col-6
              = form.text_field :last_name, placeholder: t('transactions.contact_form.last_name'), class: "shipping-address-last-name transaction-address-req-field"
              = fa_icon "check", class: "d-none"
        .form-group
          .row
            .col-12
              = form.text_field :company, placeholder: t('transactions.contact_form.company'), class: "shipping-address-company transaction-address-field"
              = fa_icon "check", class: "d-none"
        .form-group
          .row
            .col-12
              = form.text_field :street1, placeholder: t('transactions.contact_form.address'), class: "shipping-address-street1 transaction-address-req-field", disabled: @shipping_address.is_office_address?
              = fa_icon "check", class: "d-none"
        .form-group
          .row
            .col-12
              = form.text_field :apartment, placeholder: t('transactions.contact_form.apartment'), class: "shipping-address-apartment transaction-address-field"
              = fa_icon "check", class: "d-none"
        .form-group
          .row
            .col-12
              = form.text_field :city, placeholder: t('transactions.contact_form.city'), class: "shipping-address-city transaction-address-req-field",  disabled: @shipping_address.is_office_address?
              = fa_icon "check", class: "d-none"
        .form-group
          .row
            .col-6
              = text_field_tag :country, 'Canada', placeholder:  t('transactions.contact_form.country'), readonly: true
            .col-6
              = form.select :state_or_province, options_for_select(CANADA_PROVINCES, selected: form.object.state_or_province), {}, {:class => "shipping-address-state", disabled: @shipping_address.is_office_address?}
        .form-group
          .row
            .col-6
              = form.text_field :postal_code,  placeholder: t('transactions.contact_form.zip_code'), class: "shipping-address-postal-code transaction-address-req-field", disabled: @shipping_address.is_office_address?
              = fa_icon "check", class: "d-none"
            .col-6
              = form.text_field :phone, placeholder: t('transactions.contact_form.phone'), class: "phone-input shipping-address-phone transaction-address-req-field"
              = fa_icon "check", class: "d-none"
        .form-group
          .row
            .col-12.center-items
              = form.submit t('transactions.btn_label.continue_to_shipping'), class:"btn btn-submit"
            .col-12.center-items.back-to-cart
              = fa_icon "angle-left"
              = link_to t('transactions.btn_label.return_to_cart'), show_cart_path
        .row
          .col-12.br-top.copy-right
            %span= t('common.copy_right')