.row.listing-specifications#specification-bar
  %div.clearfix.specification-list
    %ul.nav.nav-pills.listing-categories-detail.clearfix.col-12
      - @listing.listing_tabs.where.not(tab_type: ['in_the_box', 'not_in_the_box', 'key_features']).each do |tab|
        - if tab.is_active
          %li{class: tab.tab_type == 'specs' ? "active" : ""}
            %a.uppercase.tab-link{'data-tab' => "#{tab.tab_type}_tab"}= tab.title
      %li
        %a.tab-link{'data-tab' => 'accessories_tab'} ACCESSORIES

.row
  .listing-specifications.col-9#specification-tabs
    = render partial: 'listings/listing_details'

  .include-in-the-box.col-3
    .col-12
      = render partial: 'listings/include_in_the_box'

      .listing-user-manual
        = link_to @listing.user_manual.url(:original), {target: "_blank"} do
          %span.user-manual-file-icon
            = image_tag("mf_icons/icon-movri-file.svg", class: 'header-menu-icon icon-movri-file')
          %span.user-manual-title
            User Manual