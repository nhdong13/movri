.row
  .col-12.flex-items.margin-b-t-10
    %span.fz-22 My Account
  .row
    .col-12
      .account-header.white-background.padding-20
        %p= @current_user.display_name
        .flex-items
          .common-link-btn.margin-r-15
            %span.fz-24= link_to 'My Orders', person_path(@current_user, view: "orders")
          .common-link-btn.active
            %span.fz-24= link_to 'My Info', person_path(@current_user, view: "info")

  .user-info-partial
    = render partial: "people/information"
  .billing-and-shipping-address
    = render partial: "people/billing_and_shipping_address"
  .payment-options-partial
    = render partial: "people/payment_options"
