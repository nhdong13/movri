- content_for :title_header do
  %h1
    = t("layouts.admin.admin")
    = "-"
    = t("admin.communities.edit_details.community_details")
= render :partial => "admin/left_hand_navigation", :locals => { :links => admin_links_for(@current_community) }

.left-navi-section.p-3
  %h2 Preferences
  %input{name: "authenticity_token", value: "#{ form_authenticity_token}", type: "hidden"}
  = react_component("CommunityPreferences", props: {preferences: @preferences.as_json.merge({facebook_pixel_id: @current_community.facebook_pixel_id, default_currency: @current_community.currency}), authenticityToken: form_authenticity_token})