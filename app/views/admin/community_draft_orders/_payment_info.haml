.payment
  %h3= @order.payment_process.capitalize
  .row
    .col-2
      = "Subtotal"
    .col-8
      = "#{order.transaction_items.size} #{order.transaction_items.size > 1 ? 'items' : 'item'}"
    .col-2
      %p= number_to_currency(order.total_price_cents)
  .row.tax
    .col-2
      = "Tax"
    .col-8
      %p= "GST #{@payment_info[:GST]}%"
      - if @payment_info[:PST]
        %p= "PST #{@payment_info[:PST]}%"
    .col-2
      %p= "#{number_to_currency(order.total_price_cents * @payment_info[:GST] / 100)}"
      - if @payment_info[:PST]
        %p= "#{number_to_currency(order.total_price_cents * @payment_info[:PST] / 100)}"
  .row
    .col-10
      = "Total"
    .col-2
      %p= number_to_currency(@payment_info[:total])
.row
  .col-10
    = "Paid by customer"
  .col-2
    %p= number_to_currency(@payment_info[:total])