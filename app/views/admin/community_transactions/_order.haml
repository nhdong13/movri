%tr
  %td
    = "##{order.id}"
  %td
    = order.created_at.to_formatted_s(:long)
  %td
    = order.buyer&.given_name
  %td
    .state-label.paid-state-label
      %i.fa.fa-circle
      %span= order.completed? ? "Paid": "Unpaid"

  %td
    .state-label.unfulfilled-state-label
      %i.fa.fa-circle-o
      %span= order.fulfilled? ? 'Fulfilled' : "Unfulfilled"
  %td
    = money_to_humanized(order.item_total)
  %td
    = "#{order.total_quantity} #{order.total_quantity > 1 ? 'items' : 'item'}"
  %td
    = order.delivery_method.capitalize
  %td
    = link_to "Edit", edit_admin_community_transaction_path(@current_community, order)