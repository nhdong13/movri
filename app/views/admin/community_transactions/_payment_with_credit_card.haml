= form_for TransactionAddress.new do |f|
  .modal#payment-with-credit-card-modal
    .row.title
      = 'Pay with credit card'
    .row.br-bottom
      .col-12
        %span= "Card number"
        #card-number
      .col-6
        %span= "Name on card"
        = text_field_tag 'card_name', '', placeholder: "Name on card"
      .col-3
        %span= "Expires"
        #card-expiry
      .col-3
        %span= "CVV"
        #card-cvc
    .row.billing-info
      %h4= "Billing Information"
      .col-12

      .col-4
        = f.label :first_name
        = f.text_field :first_name
      .col-4
        = f.label :last_name
        = f.text_field :last_name
      .col-4
        = f.label :postal_code
        = f.text_field :postal_code
      .col-4
        = f.label :address
        = f.text_field :street1
      .col-4
        = f.label :address
        = f.text_field :street2
      .col-4
        = f.label :city
        = f.text_field :city
      .col-4
        = f.label :country
        = f.text_field :country
      .col-4
        = f.label :state_or_province
        = f.text_field :state_or_province
      .col-4
        = f.label :phone
        = f.text_field :phone

  .row.shipping-address
  .row.billing-address