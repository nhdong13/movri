.desktop-display
  .movri-different.text-center
    .section-heading.title= grid.heading
    .row
      - text_styles = grid_styles(grid)
      - grid.store_grid_items.order(order_number: :asc).each do |item|
        - style = "color: #{item.text_color};"
        .col-6
          .different-box{style: "height: 300px; background-image: url(#{item.image.url}); background-size: contain; background-repeat: no-repeat;"}
            .font-size-14.different-desc
              = item.text.html_safe
